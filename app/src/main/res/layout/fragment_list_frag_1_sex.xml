<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".listFrags.ListFrag_1_Sex"
    android:padding="50dp">

        <TextView
            android:id="@+id/tv_listFrag1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별을 알려주세요"
            android:textSize="20sp"
            android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/radioGroup_list_frag_1"
            app:layout_constraintTop_toBottomOf="@id/tv_listFrag1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
            <RadioButton
                android:id="@+id/btn_male_list_frag1"
                android:text="남자"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/btn_female_list_frag1"
                android:text="여자"
                android:layout_width="200dp"
                android:layout_height="55dp"/>
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next_list_frag1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="다음으로"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginBottom="50dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>