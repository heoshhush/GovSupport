<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".listFrags.ListFrag_2_Age"
    android:padding="30dp">

    <TextView
        android:id="@+id/tv_listFrag2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연령대가 어떻게 되시나요?"
        android:textSize="20sp"
        android:textStyle="bold" />
    <RadioGroup
        android:id="@+id/radioGroup_list_frag_2"
        app:layout_constraintTop_toBottomOf="@id/tv_listFrag2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <RadioButton
            android:id="@+id/btn_list_age1"
            android:text="영유아(0세~5세)"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:checked="true"/>
        android:checked="true"/>
        <RadioButton
            android:id="@+id/btn_list_age2"
            android:text="아동(6세~12세)"
            android:layout_width="200dp"
            android:layout_height="55dp"/>
        <RadioButton
            android:id="@+id/btn_list_age3"
            android:text="청소년(13세~18세)"
            android:layout_width="200dp"
            android:layout_height="55dp"/>
        <RadioButton
            android:id="@+id/btn_list_age4"
            android:text="청년(19세~29세)"
            android:layout_width="200dp"
            android:layout_height="55dp"/>

        <RadioButton
            android:id="@+id/btn_list_age5"
            android:text="중년(30세~49세))"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/btn_list_age6"
            android:text="장년(50세~64세)"
            android:layout_width="200dp"
            android:layout_height="55dp"/>
        <RadioButton
            android:id="@+id/btn_list_age7"
            android:text="노년(65세~)"
            android:layout_width="200dp"
            android:layout_height="55dp"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next_list_frag2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="다음으로"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginBottom="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>