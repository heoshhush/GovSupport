<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listFrags.ListFrag_3_Income"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="50dp">


    <TextView
        android:id="@+id/tv_listFrag3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소득 수준은 어떻게 되시나요?"
        android:textSize="20sp"
        android:textStyle="bold" />
    <RadioGroup
        android:id="@+id/radioGroup_list_frag_3"
        app:layout_constraintTop_toBottomOf="@id/tv_listFrag3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <RadioButton
            android:id="@+id/btn_list_income1"
            android:text="기준중위소득 0% ~ 50%"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/btn_list_income2"
            android:text="기준중위소득 51% ~ 75%"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/btn_list_income3"
            android:text="기준중위소득 76% ~ 100%"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/btn_list_income4"
            android:text="기준중위소득 101% ~ 200%"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/btn_list_income5"
            android:text="기준중위소득 200% 초과"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:checked="true"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next_list_frag3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="다음으로"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginBottom="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>